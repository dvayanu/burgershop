{
    "mailNotificationEnabled" : false,
    "notificationsMutingTime": 60,
    "defaultApplication" : "Burgershop",

    "@applications": [
        {
            "name": "Burgershop",
            "@components": [
                {
                    "name": "Hamburg",
                    "category": "shop",
                    "connectorType": "HTTP",
                    "location": "zb1.test.anotheria.net/burgershop"
                },
                {
                	"name": "Berlin",
                	"category": "shop",
                	"connectorType": "HTTP",
                	"location": "zb2.test.anotheria.net/burgershop"
                },
                {
                	"name": "Munich",
                	"category": "shop",
                	"connectorType": "HTTP",
                	"location": "zb3.test.anotheria.net/burgershop"
                }
            ],
        "@charts": [
             {
                 "name": "Sessions",
                 "limit": 200,
                 "@lines": [
                     {
                         "component": "Hamburg",
                         "accumulator": "SessionCount Cur Absolute",
                         "caption": "Hamburg"
                     },
                     {
                         "component": "Berlin",
                         "accumulator": "SessionCount Cur Absolute",
                         "caption": "Berlin"
                     },
                     {
                         "component": "Munich",
                         "accumulator": "SessionCount Cur Absolute",
                         "caption": "Munich"
                     }
                 ]
             },
             {
                 "name": "Orders",
                 "limit": 200,
                 "@lines": [
                     {
                         "component": "Hamburg",
                         "accumulator": "OrdersPerMinute",
                         "caption": "Hamburg"
                     },
                     {
                         "component": "Berlin",
                         "accumulator": "OrdersPerMinute",
                         "caption": "Berlin"
                     },
                     {
                         "component": "Munich",
                         "accumulator": "OrdersPerMinute",
                         "caption": "Munich"
                     }
                 ]
             }

			]
			}],
		
	        


    "@connectors": [
        {
            "type": "HTTP",
            "className": "org.moskito.control.connectors.HttpConnector"
        },
        {
            "type": "RMI",
            "className": "org.moskito.control.connectors.RMIConnector"
        }
    ],

    "@statusUpdater": {
        "checkPeriodInSeconds": 10,
        "threadPoolSize": 10,
        "timeoutInSeconds": 60,
        "enabled": true
    },

    "@chartsUpdater": {
        "checkPeriodInSeconds": 40,
        "threadPoolSize": 5,
        "timeoutInSeconds": 60,
        "enabled": true
    }

}